{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD API Gateway Mahesh",
  "port": 8000,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "@comment": "Feature: Authorization based on JWT (using Keycloak)",
      "endpoint": "/hello",
      "cache_ttl": "1s",
      "backend": [
        {
          "host": [
            "http://movies:8080"
          ],
          "url_pattern": "/hello"
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "audience": ["IRIS"],
          "jwk_url": "http://keycloak:8080/realms/pulse/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/test",
      "backend": [
        {
          "host": [
            "http://movies:8080"
          ],
          "url_pattern": "/test"
        }
      ]
    }
  ],
  "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["POST", "GET"],
      "allow_headers": ["Origin", "Authorization", "Content-Type"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h"
    }
 }

